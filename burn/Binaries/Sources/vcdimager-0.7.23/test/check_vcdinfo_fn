# Pssst.... This file is intended to be sourced...

test_vcdrip_cleanup() {
  rm -f $outfile
}

test_vcdinfo() {

  opts="$1"
  outfile="$2"
  rightfile="$3"

  VCDINFO="../frontends/cli/vcd-info"

  if [ ! -x ${VCDINFO} ]; then
    echo "$0: No vcdinfo test skipped"
    return 77
  fi

  if ${VCDINFO} ${opts} >${outfile} 2>&1 ; then 
    cmp_files $outfile $rightfile vcdinfo
    return $?
  else
    echo "$0: ${VCDINFO} ${opts} failed"
    return 2
  fi

}

